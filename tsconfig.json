{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/types": ["./types"],
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["dist/", "*.config.*"]
}
